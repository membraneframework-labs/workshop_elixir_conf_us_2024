```elixir
defp postprocess(tensor, input_stream_format, model_module) do
  tensor
  |> Nx.backend_transfer(EXLA.Backend)
  |> model_module.postprocess_rescale()
  |> Nx.reshape({3, input_stream_format.height, input_stream_format.width})
  |> Nx.round()
  |> Nx.as_type(:u8)
  |> Nx.to_binary()
end
